#include <stdio.h>

int main() {
   int n, i, j;
   printf("Введіть розмірність масиву: ");
   scanf("%d", &n);
   
   int arr[n][n];
   printf("Введіть елементи масиву: \n");
   
   for(i = 0; i < n; i++) {
      for(j = 0; j < n; j++) {
         scanf("%d", &arr[i][j]);
      }
   }
   
   for(i = 0; i < n; i++) {
      for(j = 0; j < n; j++) {
         if(i == j && arr[i][j] < 0) {
            arr[i][j] = 1;
         }
      }
   }
   
   printf("Результат: \n");
   
   for(i = 0; i < n; i++) {
      for(j = 0; j < n; j++) {
         printf("%d ", arr[i][j]);
      }
      printf("\n");
   }
   
   return 0;
}
