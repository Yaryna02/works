#include <stdio.h>

int main() {
    float a, h, area;

    printf("Введіть довжину сторони трикутника: ");
    scanf("%f", &a);

    printf("Введіть довжину висоти, опущеної на цю сторону: ");
    scanf("%f", &h);

    area = 0.5 * a * h;

    printf("Площа трикутника довжиною сторони %.2f і висотою %.2f дорівнює %.2f\n", a, h, area);

    return 0;
}
